<h1>Edit Product:</h1>
<form action="/products/<%= @product.id %>" method="post">
  <input type="hidden" name="_method" value="patch" />
  <div>
    Name: <input type="string" name="name" value="<%= @product.name %>">
  </div>
  <div>
    Description: <input type="text" name="description" value="<%= @product.description %>">
  </div>
  <div>
    Price: <input type="decimal" name="price" value="<%= @product.price %>">
  </div>
  Supplied By:
    <select name="supplier_id" id="">
      <% Supplier.all.each do |supplier| %>
        <option value="<%= supplier.id %>"><%=supplier.name%></option>option>
        <% end %>
    </select><br>     
  

  <input type="submit" value="Post Product">

  </form>

  <a href="/products/<%= @product.id %>" data-method="delete">Delete</a>